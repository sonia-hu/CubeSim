<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.sonia_hu.cubesimulator.MainActivity"
    android:background="#1D1D1D"
    android:padding="0dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="by Sonia"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView2"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textColor="#000"
        android:background="#79BD9A"
        android:layout_alignParentEnd="true"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cube Simulator"
        android:id="@+id/textView"
        android:background="#0B486B"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="36sp"
        android:textColor="#FFF" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Roll"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#79BD9A"
        android:textStyle="bold"
        android:textSize="24sp"
        android:onClick="reRoll"
        android:paddingTop="20dp"
        android:paddingBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Line 1"
        android:id="@+id/line1"
        android:textColor="#FFF"
        android:singleLine="true"
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Line 2"
        android:id="@+id/line2"
        android:textColor="#FFF"
        android:singleLine="true"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/line1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Line 3"
        android:id="@+id/line3"
        android:textColor="#FFF"
        android:singleLine="true"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/line2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Mesos Spent"
        android:id="@+id/textView3"
        android:background="#A8DBA8"
        android:textColor="#000"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/mesosText"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:background="#0B486B"
        android:textColor="#FFF"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/attemptsText"
        android:layout_alignRight="@+id/space2"
        android:layout_alignEnd="@+id/space2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/button2"
        android:background="#a2d3a2"
        android:onClick="resetMesosValue"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/textView3"
        android:layout_above="@+id/mesosText"
        android:layout_alignRight="@+id/space2"
        android:layout_alignEnd="@+id/space2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="# of Rolls"
        android:id="@+id/textView4"
        android:background="#A8DBA8"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="#000"
        android:layout_below="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/space2"
        android:layout_toRightOf="@+id/space2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/attemptsText"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:background="#0B486B"
        android:textColor="#FFF"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:autoText="true"
        android:layout_above="@+id/view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView3"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#3B8686"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="false"
        android:layout_toRightOf="@+id/space1"
        android:layout_alignBottom="@+id/seekEqLvl"
        android:layout_alignTop="@+id/EqLvlText" />

    <Space
        android:layout_width="250dp"
        android:layout_height="20px"
        android:id="@+id/space1"
        android:layout_below="@+id/line3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <Space
        android:layout_width="192dp"
        android:layout_height="10dp"
        android:id="@+id/space2"
        android:layout_below="@+id/space1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Equipment Level"
        android:id="@+id/textView5"
        android:textColor="#000"
        android:background="#A8DBA8"
        android:textAlignment="center"
        android:paddingLeft="8dp"
        android:paddingTop="5dp"
        android:paddingRight="8dp"
        android:paddingBottom="5dp"
        android:layout_above="@+id/seekEqLvl"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekEqLvl"
        android:background="#A8DBA8"
        android:indeterminate="false"
        android:max="250"
        android:thumbTint="#0B486B"
        android:maxHeight="500dp"
        android:progressTint="#3B8686"
        android:layout_above="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/spinner1"
        android:layout_toStartOf="@+id/spinner1"
        android:clickable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/EqLvlText"
        android:background="#0B486B"
        android:textColor="#FFF"
        android:layout_alignTop="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_alignRight="@+id/space1"
        android:layout_alignBottom="@+id/textView5" />

    <View
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:id="@+id/view"
        android:layout_below="@+id/mesosText"
        android:layout_alignRight="@+id/spinner1"
        android:layout_alignEnd="@+id/spinner1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <View
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_above="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/spinner1"
        android:layout_alignEnd="@+id/spinner1"
        android:id="@+id/view2" />

</RelativeLayout>
